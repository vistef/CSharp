//4. Declare an integer variable and assign it with the value 254 in hexadecimal format (0x##). Use Windows Calculator to find its 
//hexadecimal representation. Print the variable and ensure that the result is “254”.

using System;

namespace Exercise_4
{
    class Program
    {
        static void Main()
        {
            int HexNum = 0xFE;
            Console.WriteLine("This is int variable with Hex Value: {0} ", HexNum);
        }
    }
}
